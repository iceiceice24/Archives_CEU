<h1> Folders </h1>

<%= link_to "Create", new_folder_path, class:"nav-link" %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Folder name</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @folders.each do |f| %>
      <tr>
        <td><%= f.folderName %></td>
      </tr> 
    <% end %>
  </tbody>
</table>

